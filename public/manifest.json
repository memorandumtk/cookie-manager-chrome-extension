{
  "name": "Cookie Manager With React",
  "description": "An extension to manage cookies in Chrome with using React.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
        "16": "images/cookie.png",
        "48": "images/cookie.png",
        "128": "images/cookie.png"
    },
    "default_popup": "index.html",
    "default_title": "Cookie Manager"
  },
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/cookie.png",
    "48": "images/cookie.png",
    "128": "images/cookie.png"
  }
}
