{
  "name": "Chrome React Cookie Manager",
  "description": "An extension to manage cookies in Chrome with using React.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Cookie Manager"
  },
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://*/"
  ]
}
